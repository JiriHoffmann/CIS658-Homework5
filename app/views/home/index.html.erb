
<div class="jumbotron jumbotron-fluid text-center bg-secondary">
    <div class ="container ">
        <h1 class="jumbotron-heading text-white">Bug Tracker</h1>
        <p class="lead text-light">On this website you can keep track of bugs and fix them based on their priority.</p>
    </div>
</div>



<div class="album bg-light">
<div class="container">
    <h3>Most recent:</h3>
    <div class="row">
            <% @bugs.each do |bug|%>
                <div class="col-md-4 col-sm-12">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                    <h5><%=bug.title%></h5>
                    <h6 class="text-muted">by <%=bug.user.fname%> <%=bug.user.lname%></h6>
                    <p class="card-text"><%=bug.description.truncate_words(30)%></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                        <div class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', bug %></div>
                        <div class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_bug_path(bug) %></div>
                        </div>
                    </div>
                    </div>
                </div>
                </div>
            <% end%>
        </div class="row">
    </div class="container">
</div>

