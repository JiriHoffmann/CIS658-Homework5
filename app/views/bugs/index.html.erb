
<% if !notice.blank? %>
	<p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<div class="container">
  <h1>Bugs</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class="w-15">User</th>
        <th class="w-15">Title</th>
        <th class="w-25">Description</th>
        <th class="w-10">Issue</th>
        <th class="w-10">Priority</th>
        <th class="w-10">Status</th>
         <th class="w-25">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @bugs.each do |bug| %>
        <tr>
          <td class="w-15"><%= "#{bug.user.fname} #{bug.user.lname}" %></td>
          <td class="w-15"><%= bug.title %></td>
          <td class="w-25"><%= bug.description %></td>
          <td class="w-10"><%= bug.issue_type %></td>
          <td class="w-10"><%= bug.priority %></td>
          <td class="w-10"><%= bug.status %></td>
          <td class="w-25">
            <%= link_to bug, class: "btn btn-outline-primary btn-sm" do %>
            Show
            <% end %>
            <%= link_to edit_bug_path(bug), class: "btn btn-outline-primary btn-sm" do %>
            Edit
            <% end %>
            <%= link_to bug, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
            Delete
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br/>
    <%= link_to 'New Bug', new_bug_path, :class => "btn btn-primary" %>
</div>